.modal(tabindex='-1', role='dialog')
	.modal-dialog.modal-lg
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
				h4.id_title.modal-title
			.modal-body
				.form-group
					label Trường bắt buộc
					.id_field
				.form-group
					label CV
					.id_cv
				div.hidden.id_waiting(style="opacity: 0.5;background-color: whitesmoke;position: fixed;top: 0px;width: 100%;z-index: 30;height: 100%;left:0px")
					div(style="background: url('res/Image/wait32x32.gif') no-repeat center;width: 100%; height:100%")
			.modal-footer
				button.btn.btn-primary.id_close(type='button',data-dismiss="modal") 
					span.icon-x
					| &nbsp; Đóng
